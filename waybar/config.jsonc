// -*- mode: jsonc -*-
{
    "height": 30, // Waybar height (to be removed for auto height)
    "spacing": 4, // Gaps between modules (4px)
    "modules-left": [
	"custom/os-icon",
	"hyprland/workspaces",
	"custom/media"
    ],
    "modules-center": [
	"cpu",
	"temperature",
	"memory"
    ],
    "modules-right": [
	"network",
	"custom/keyboard",
	"custom/microphone",
	"clock"
    ],
    "custom/os-icon": {
	    "format": "Ó°É",
	    "tooltip": false
    },
        "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "all-outputs": true,
        "format-icons": {
            "active": "ÔÑë",
            "default": "ÔÑå",
            "urgent": "ÔÅ™"
        },
        "persistent-workspaces": {
            "*": 5
        }
    },
    "hyprland/language": {
    "format": "<span size='80%'>ÔÑú </span> {}",
    "format-en": "us",
    "format-en-colemak": "cole",
    "keyboard-name": "at-translated-set-2-keyboard",
    "on-click": "~/.config/waybar/scripts/kb_layout.sh"
},
"cpu": {
  "format": "{usage}% Ôíº ",
  "interval": 10,
  "max-length": 10
},
"memory": {
  "format": "<span size='80%'>{used}</span> | <span size='80%'>{total}</span><span size='80%'>Û∞æÖ</span>"
},
"temperature": {
  "format": "{temperatureC}Û∞îÑ",
  "format-warning": "<span color='yellow'>{temperatureC}Û∞îÑ</span>",
  "format-critical": "<span color='red'>{temperatureC}Û∞îÑ</span>",
  "critical-threshold": 80,
  "warning-threshold": 50,
  "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
  "tooltip": false,
  "interval": 5
},
"load": {
    "interval": 10,
    "format": "load: {load1}",
    "max-length": 10
},

  "pulseaudio": {
    "format": "{icon}",
    "on-click": "kitty --class=Wiremix -e wiremix",
    "on-click-right": "pamixer -t",
    "tooltip-format": "üéµ {volume}%",
    "scroll-step": 5,
    "format-muted": "Óª®",
    "format-icons": {
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®"
      ]
    }
  },
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },
"network": {
"format-wifi": "Ôá´  {essid}",
"format-ethernet": "Û∞àÅ | {bandwidthUpBytes}<span size='80%' rise='2pt'> ÔÖà</span> | {bandwidthDownBytes}<span size='80%'> ÔÖâ</span>",
"format-disconnected": "<span color='red'>ÔÅ± Disconnected</span>",
"tooltip": false,
"on-click": "nm-connection-editor"
}
,
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/keyboard": {
	    "format": "{}",
	    "exec": "~/.config/waybar/scripts/kb_layout.sh",
	    "interval": 1,
	    "on-click": "hyprctl switchxkblayout current next",
	    "tooltip": "false"
    },
    "custom/microphone": {
	    "format": "ÔÑ∞",
	    "interval": 1,
	    "tooltip-format": "info 123"
    }
}
